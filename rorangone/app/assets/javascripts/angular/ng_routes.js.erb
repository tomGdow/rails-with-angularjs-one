'use strict'
// Declare app level module which depends on filters, and services
angular.module('myApp', [
		'ngRoute',
		'myApp.filters',
		'myApp.services',
		'myApp.directives',
		'myApp.controllers'
]).
config(['$routeProvider', function($routeProvider) {
	$routeProvider.when('/view1',  
			{templateUrl: 'home/template1.html',  controller: 'MyCtrl1', controllerAs: 'ct1'});
	$routeProvider.when('/view2', 
			{templateUrl: 'home/template2.html',  controller: 'MyCtrl2', controllerAs: 'ct2'});
	$routeProvider.when('/view3',
			{templateUrl: 'home/template3.html',  controller: 'MyCtrl3', controllerAs: 'ct3'}); //products 
	$routeProvider.when('/view4', 
			{templateUrl: 'home/template4.html',  controller: 'MyCtrl4', controllerAs: 'ct4'}); // product-new
	$routeProvider.when('/view5', 
			{templateUrl: 'home/template5.html',  controller: 'MyCtrl5', controllerAs: 'ct5'}); // product-show
	$routeProvider.when('/view6', 
			{templateUrl: 'home/template6.html',  controller: 'MyCtrl6', controllerAs: 'ct6'}); // product-edit
	$routeProvider.when('/view7', 
			{templateUrl: 'home/template7.html',  controller: 'MyCtrl3', controllerAs: 'ct3'}); // products (sport scope)
	$routeProvider.when('/view8', 
			{templateUrl: 'home/template8.html',  controller: 'MyCtrl3', controllerAs: 'ct3'}); // products (outdoor scope)
	$routeProvider.when('/view9', 
			{templateUrl: 'home/template9.html',  controller: 'MyCtrl3', controllerAs: 'ct3'}); // products (household scope)
	$routeProvider.otherwise({redirectTo: '/view1'});
}]);



